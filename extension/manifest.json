{
  "manifest_version": 3,
  "name": "ViTimeAssistant",
  "version": "1.0.1",
  "description": "Vietnamese AI assistant that reports your Chrome usage.",
  "permissions": ["tabs", "storage", "alarms", "idle"],
  "host_permissions": ["http://localhost:8000/*", "http://127.0.0.1:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "ViTimeAssistant",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
